<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.dao.RolePermissionDao">

    <select id="findPermissionIdListByRoleId" resultType="Long">
        select permission_id from acl_role_permission where role_id=#{roleId} and is_deleted=0
    </select>

<!--    删除roleId已经存在但是不需要的permissionId-->
    <update id="removeRoleIdAndPermissionId" useGeneratedKeys="true" keyProperty="id">
        update acl_role_permission set is_deleted=1 where role_id=#{roleId}
        and permission_id in (
            <foreach collection="removeCollects" item="permissionId" separator=",">
                #{permissionId}
            </foreach>
        )
    </update>

<!--    逻辑删除roleId-PermissionId-->
    <update id="update">
        update acl_role_permission set is_deleted=0
        where role_id=#{roleId} and permission_id=#{permissionId}
    </update>

<!--    插入新数据-->
    <insert id="insert">
        insert into acl_role_permission(role_id,permission_id)
        value(
            #{roleId},#{permissionId}
        )
    </insert>
</mapper>